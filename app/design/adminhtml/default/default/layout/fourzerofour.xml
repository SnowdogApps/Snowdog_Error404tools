<?xml version="1.0"?>

<layout version="0.1.0">
    <fourzerofour_adminhtml_logs_index>
        <reference name="menu">
            <action method="setActive"><menupath>report</menupath></action>
        </reference>
        <reference name="content">
            <block type="fourzerofour/adminhtml_logs" name="logs404" />
            <block type="core/template" name="404popup">
                <action method="setTemplate"><template>404tools/popup.phtml</template></action>
            </block>
        </reference>
    </fourzerofour_adminhtml_logs_index>


    <fourzerofour_adminhtml_redirects_index>
        <reference name="menu">
            <action method="setActive"><menupath>report</menupath></action>
        </reference>
        <reference name="content">
            <block type="fourzerofour/adminhtml_redirects" name="redirects404" />
        </reference>
    </fourzerofour_adminhtml_redirects_index>


    <fourzerofour_adminhtml_redirects_edit>
        <reference name="content">
            <block type="fourzerofour/adminhtml_redirects_edit" name="redirects404_edit" />
        </reference>
    </fourzerofour_adminhtml_redirects_edit>


    <!-- regular expressions -->
    <fourzerofour_adminhtml_regexp_index>
        <reference name="menu">
            <action method="setActive"><menupath>report</menupath></action>
        </reference>
        <reference name="content">
            <block type="fourzerofour/adminhtml_regexp" name="regexp" />
        </reference>
    </fourzerofour_adminhtml_regexp_index>

    <!-- regexp edit -->
    <fourzerofour_adminhtml_regexp_edit>
        <reference name="content">
            <block type="fourzerofour/adminhtml_regexp_edit" name="regexp_edit" />
        </reference>
    </fourzerofour_adminhtml_regexp_edit>
</layout>